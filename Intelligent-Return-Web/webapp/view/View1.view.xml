<mvc:View controllerName="Intelligent-Return-Web.Intelligent-Return-Web.controller.View1" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data" displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<IconTabBar id="idTopLevelIconTabBar">
						<items>
							<IconTabFilter id="start" text="{i18n>SegmentPie}">
								<Table id="idPiechart" inset="false" items="{ path: '/Segment' }">
									<columns>
										<Column width="12em">
											<Text text="Segment ID"/>
										</Column>
										<Column width="12em">
											<Text text="No of Customers"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<ObjectIdentifier title="{SegmentID}"/>
												<Text text="{NumberOfCustomer}"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</IconTabFilter>
							<IconTabFilter id="layouts" text="{i18n>SegmentPie}">
								<viz:VizFrame id="DueDateGridFrame" vizType="info/pie" uiConfig="{applicationSet:'fiori'}"
									vizProperties="{plotArea:{dataLabel:{visible: true}}}">
									<viz:dataset>
										<viz.data:FlattenedDataset data="{/Segment}">
											<viz.data:dimensions>
												<viz.data:DimensionDefinition name="SegmentID" value="{SegmentID}"/>
											</viz.data:dimensions>
											<viz.data:measures>
												<viz.data:MeasureDefinition value="{NumberOfCustomer}" name="NumberOfCustomer"/>
											</viz.data:measures>
										</viz.data:FlattenedDataset>
									</viz:dataset>
									<viz:feeds>
										<viz.feeds:FeedItem uid="size" type="Measure" values="NumberOfCustomer"/>
										<viz.feeds:FeedItem uid="color" type="Dimension" values="SegmentID"/>
									</viz:feeds>
								</viz:VizFrame>
								<viz:Popover id="vizPopover"></viz:Popover>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>